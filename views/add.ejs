<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <title>Document</title>
  <% include ./Models/bs_css.ejs %>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-12 text-center">
        <h1>
          新增事項
        </h1>
      </div>
    </div>
    <form action="/add" method="post">
      <div class="row m-5">  <!--m-5: margin=5-->
        <div class="col-5 m-auto border border-success border-2">
          <div class="row mt-2">
            <div class="col-4 text-center">標題</div>
            <div class="col-6"><input name="title" type="text" class="w-100"></div>
          </div>
          <div class="row">
            <div class="col-4 text-center">日期</div>
            <div class="col-6"><input name="date" type="date" class="w-100"></div>
          </div>
          <div class="row">
            <div class="col-4 text-center">時間</div>
            <div class="col-6"><input name="time" type="time" class="w-100"></div>
          </div>
          <div class="row">
            <div class="col-4 text-center">備註</div>
            <div class="col-6"><textarea class="w-100" name="ps" rows="5"></textarea></div>
          </div>
          <div class="row m-2">
            <button class="btn btn-dark" type="submit">新增</button>
          </div>
          <div class="row m-2">
            <a href="/" class="btn btn-primary w-100">取消</a>
          </div>
        </div>
      </div>
    </form>
  </div>

  <% include ./models/bs_js.ejs %>

</body>
</html>